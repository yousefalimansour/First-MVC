@model Employee
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<form method="post" action="/Employee/saveEdit/@Model.Id">

    <div>
        <label>Name</label>
        <input type="text" value="@Model.Name" name="Name" id="Name" class="form form-control" />
    </div>
    <div>
        <label>Address</label>
        <input type="text" value="@Model.Address" name="Address" id="Address" class="form form-control" />
    </div>
    <div>
        <label>ImageURL</label>
        <input type="text" value="@Model.ImageURL" name="ImageURL" id="ImageURL" class="form form-control" />
    </div>
    <div>
        <label>Salary</label>
        <input type="number" value="@Model.Salary" name="Salary" id="Salary" class="form form-control" />
    </div>
    <div>
        <label>JobTilte</label>
        <input type="text" value="@Model.JobTilte" name="JobTilte" id="JobTilte" class="form form-control" />
    </div>
    <div>
        <label>DepartmentID</label>
        <input type="number" value="@Model.DepartmentID" name="DepartmentID" id="DepartmentID" class="form form-control" />
    </div>
    <input type="submit" value="Save" class="btn btn-success" />

</form>

